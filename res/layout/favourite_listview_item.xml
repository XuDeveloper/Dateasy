<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/event_image_iv"
        android:layout_width="288dp"
        android:layout_height="160dp"
        android:layout_gravity="top|center_horizontal"
        android:src="@drawable/party" />

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingTop="8dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/event_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="假面舞会"
                android:textColor="#444444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/event_people_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="8dp"
                android:text="23报名"
                android:textColor="#f37028"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/time"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp" />
            
            <TextView 
                android:id="@+id/event_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-06-18   18:00~21:00"
                android:layout_gravity="center_vertical"
                android:paddingLeft="3dp"
                android:textSize="10sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/address"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp" />
            
            <TextView 
                android:id="@+id/event_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广东省广州市番禺区广州大学城外环西路378号"
                android:layout_gravity="center_vertical"
                android:paddingLeft="3dp"
                android:textSize="10sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>