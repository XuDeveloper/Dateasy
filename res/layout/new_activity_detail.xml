<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/detail_back_ib"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/location_back" />

        <TextView
            android:id="@+id/detail_topbar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="定位"
            android:textColor="#666666"
            android:textSize="20sp" />

        <Button
            android:id="@+id/announce_bt"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/announce"
            android:text="发布"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/blank" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:text="活动名称:"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/new_activity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/blank" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:text="活动时间:"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/new_activity_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/blank" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:text="活动截止:"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/new_activity_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/blank" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:text="活动地点:"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/new_activity_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:textColor="#666666"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/blank" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:text="活动费用:"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/new_activity_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/click_button"
                    android:paddingLeft="4dp"
                    android:text="报名填写信息:"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                    
                <ImageView 
                    android:layout_width="150dp"
                    android:layout_height="15dp"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/detail_nameandphone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/blank2"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingLeft="6dp"
                    android:paddingTop="9dp"
                    android:text="活动详情:"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/new_activity_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:gravity="left|top" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/picture_ib"
                    android:layout_width="26dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left"
                    android:background="@drawable/picture" />

                <ImageButton
                    android:id="@+id/video_ib"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/video" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="288dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/white_bg"
                android:clickable="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:text="允许愉约首页推荐"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detail_ifrecommend_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="7dp"
                    android:text="是"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>