<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/management_activity_register_user_head_iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="8dp"
        android:src="@drawable/user1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/management_activity_register_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王小明"
            android:textColor="#666666"
            android:textSize="12sp" />
		
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/management_activity_register_user_status_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="已验票"
	            android:textColor="#999999"
	            android:textSize="10sp" />
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="电话："
	            android:textColor="#999999"
	            android:textSize="10sp" 
	            android:layout_marginLeft="14dp"/>
            <TextView
                android:id="@+id/management_activity_register_user_telephone_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="1111100013"
	            android:textColor="#999999"
	            android:textSize="10sp" />
            
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/management__activity_register_user_signuptime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2小时前"
                android:textColor="#999999"
                android:textSize="10sp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="报名"
                android:textColor="#999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/management_activity_register_user_signupevent_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="假面舞会"
                android:textColor="#00b6bc"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
