<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <RelativeLayout
        android:id="@+id/management_head_ll"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="#00b6bc" >

        <ImageView
            android:id="@+id/management_head"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/management_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/management_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="华南师范大学经管朋辈心理发展协会"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

    <include
        android:id="@+id/management_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/management_head_ll"
        layout="@layout/management_navigation_bar" />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/management_navigation_bar"
	    android:layout_marginTop="24dp"
	    android:id="@+id/management_activity_text_ll">
	    <TextView
	        android:id="@+id/management_tv_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
	        android:layout_marginLeft="16dp"
	        android:text="共"
	        android:textColor="#666666"
	        android:textSize="12sp" />

	    <TextView
	        android:id="@+id/management_tv_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/management_tv_1"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:layout_centerVertical="true"
	        android:text="1"
	        android:textColor="#666666"
	        android:textSize="20sp" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/management_tv_number"
	        android:text="个活动"
	        android:layout_centerVertical="true"
	        android:textColor="#666666"
	        android:textSize="12sp" />
	
	    <ImageButton
	        android:id="@+id/management_click"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="16dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/management_click"
	        android:background="#ffffff"
	        android:scaleType="fitCenter"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/management_click"
	        android:layout_centerVertical="true"
	        android:paddingRight="5dp"
	        android:text="只看进行中的活动"
	        android:textColor="#666666"/>
	    
	</RelativeLayout>

	<FrameLayout
        android:id="@+id/management_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/management_activity_text_ll"
        android:layout_centerInParent="true"
        />
	


</RelativeLayout>