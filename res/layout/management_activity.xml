<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/management_activity_title_bg" >

        <ImageButton
            android:id="@+id/management_activity_back_ib"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/location_back" />

        <TextView
            android:id="@+id/management_activity_topbar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="户外活动"
            android:textColor="#666666"
            android:textSize="20sp" />
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="23dp"
        layout="@layout/management_activity_navigationbar" />

    <LinearLayout
        android:id="@+id/management_activity_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>